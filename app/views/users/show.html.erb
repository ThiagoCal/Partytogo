<main>
  <div class="container">
    <%# <h2 class="fw-bold">My parties</h2> %>
    <div class="row">
      <div class="col-8 scrollable-col">

        <% @parties.each do |party| %>
            <div class = 'airbnb-card row p-4'>
              <div class="col-4">
                <div class="container w-80">
                  <%= cl_image_tag party.photo.key, class:"", alt: party.name %>
                </div>
              </div>
              <div class="col-8">
                <h2 class="card-text"><%= link_to party.name, user_party_path(id: party, user_id: current_user) %></h2>
                <h3 class="card-text"><%= party.date %></h3>
                <p class="card-text"><%= party.address %></p>
              </div>
            </div>
        <% end %>

      </div>
      <div class="col-4">
        <div style="width: 100%; height: 80vh;"
              data-controller="mapbox"
              data-mapbox-markers-value="<%= @markers.to_json %>"
              data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</main>
