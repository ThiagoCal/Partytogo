<h2>List of parties</h2>


<div class="container">
  <h2>My parties</h2>
  <div class="row">
    <% @parties_display.each do |party| %>
      <div class="col-6">
        <div class = "card">

          <div class="card-body">
            <h2 class="card-text"><%= party.name %></h2>
            <h3 class="card-text"><%= party.date %></h3>
            <p class="card-text"><%= party.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
