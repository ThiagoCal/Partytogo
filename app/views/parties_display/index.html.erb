
<main>
  <div class="container">
    <div class="row">
      <h2 class="fw-bold">All the parties you can go!</h2>
      <% @parties_display.each do |party| %>
        <div class="col-6">
          <div class = "card">
            <div class="photo" style="overflow: hidden">
              <%= cl_image_tag party.photo.key, class: 'party--card__photo' %>
            </div>
            <div class="card-body">
              <h2 class="card-text"><%= link_to party.name, user_party_path(id: party, user_id: party.user) %></h2>
              <h3 class="card-text"><%= party.date %></h3>
              <p class="card-text"><%= party.address %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
