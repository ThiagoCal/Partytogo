
<div class="container">
  <h2>Create a new party</h2>

  <div class="row">
    <div class="col-6">

        <%= simple_form_for [@user, @party] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :date, as: :date, html5: true%>
        <%= f.input :price %>
        <%= f.input :category %>
        <%= f.input :capacity %>
        <%= f.input :is_active %>

        <%= f.button :submit, class: "btn btn-flat"%>
        <% end %>

    </div>
  </div>
</div>
