<main>

<div class="container w-80">
  <h2 class="fw-bold pb-5">Update your party!</h2>

    <div class="row">
      <div class="col-12">

          <%= simple_form_for [@user, @party], url: user_party_path(@party) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :date, as: :date, html5: true %>
          <%= f.input :price %>
          <%= f.input :category %>
          <%= f.input :capacity %>
          <%= f.input :is_active %>

          <div class="py-3">
            <%= f.button :submit, class: "btn btn-outline-primary"%>
            <%= link_to 'Cancel', user_party_path(@party), class:'btn btn-outline-danger' %>
          </div>
          <% end %>

      </div>
    </div>
  </div>

</main>
